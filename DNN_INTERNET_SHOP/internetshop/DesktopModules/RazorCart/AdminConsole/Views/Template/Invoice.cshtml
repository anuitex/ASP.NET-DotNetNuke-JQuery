@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.TemplateModel>
@using System.Web.Mvc;
@using System.Web.Mvc.Html;

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Manage Invoice Templates</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (Model.Submitted)
        {
            <div class="alert alert-success alert-dismissable">
                <span class="close" data-dismiss="alert" aria-label="close">×</span>
                @Model.SaveMessage
            </div>
        }
            <form class="form-horizontal" method="post" action="@Url.Action("Invoice", "Template", new { StoreID = Model.StoreID })" autocomplete="off">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <a class="btn btn-primary pull-right" href="@Url.Action("AddInvoice", "Template", new { StoreID = Model.StoreID })">
                            <i class="fa fa-plus"></i> Add Template
                        </a>
                        <h4>Invoice Templates</h4>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Title</th>
                                        <th>Language</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoice in Model.InvoiceTemplates)
                                    {
                                        <tr>
                                            <td>@invoice.Name</td>
                                            <td>@invoice.Title</td>
                                            <td>@invoice.LanguageLocale</td>
                                            <td class="text-right">
                                                <a href="@Url.Action("EditInvoice", "Template", new { StoreID = Model.StoreID, TemplateID = invoice.TemplateID })"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                                                <a href="@Url.Action("DeleteInvoice", "Template", new { StoreID = Model.StoreID, TemplateID = invoice.TemplateID })" onclick="return confirm('Are you sure?')">
                                                    <i class="fa fa-trash-o fa-lg"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    @if (Model.InvoiceTemplates.Count < 1)
                                    {
                                        <tr><td colspan="3">No Invoice Templates added.</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->