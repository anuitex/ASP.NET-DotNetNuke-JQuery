@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ShippingModel>
@using System.Web.Mvc.Html;

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Shipping Setup</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal" method="post" action="@Url.Action("Free", "Shipping", new { StoreID = Model.StoreID })" autocomplete="off">
            @Html.Partial("_ShippingMenu")
            <div class="tab-content">
                <div class="tab-pane active">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a class="btn btn-primary pull-right" href="@Url.Action("AddFree", "Shipping", new { StoreID = Model.StoreID })">
                                        <i class="fa fa-plus"></i> Add Free Shipping
                                    </a>
                                    <h4>Free Shipping</h4>
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Ship Method</th>
                                                    <th>Category</th>
                                                    <th>Country</th>
                                                    <th>Postal Code</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var method in Model.FreeShippings)
                                                {
                                                    <tr>
                                                        <td>@method.ShipMethodName</td>
                                                        <td>@method.CategoryName</td>
                                                        <td>@method.Country</td>
                                                        <td>@method.ZipCode</td>
                                                        <td class="text-right">
                                                            <a href="@Url.Action("EditFree", "Shipping", new { StoreID = Model.StoreID, ID = method.ID })"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                                                            <a href="@Url.Action("DeleteFree", "Shipping", new { StoreID = Model.StoreID, ID = method.ID })" onclick="return confirm('Are you sure?')">
                                                                <i class="fa fa-trash-o fa-lg"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                                @if (Model.FreeShippings.Count < 1)
                                                {
                                                    <tr><td colspan="5">No Free Shipping added.</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->