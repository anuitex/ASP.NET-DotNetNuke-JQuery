@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ShippingModel>
@using System.Web.Mvc.Html;

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Shipping Setup</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal" method="post" action="@Url.Action("Zone", "Shipping", new { StoreID = Model.StoreID })" autocomplete="off">
            @Html.Partial("_ShippingMenu")
            <div class="tab-content">
                <div class="tab-pane active">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a class="btn btn-primary pull-right" href="@Url.Action("AddZone", "Shipping", new { StoreID = Model.StoreID })">
                                        <i class="fa fa-plus"></i> Add Ship Zone
                                    </a>
                                    <h4>Shipping Zone Regions</h4>
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Zone Name</th>
                                                    <th>Zone Ship Cost</th>
                                                    <th>Free Ship Amount</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var method in Model.ShipZones)
                                                {
                                                    <tr>
                                                        <td>@method.ZoneName</td>
                                                        <td>@string.Format(Model.Culture, "{0:c}", method.Price)</td>
                                                        <td>@string.Format(Model.Culture, "{0:c}", method.FreeShipOverAmount)</td>
                                                        <td class="text-right">
                                                            <a href="@Url.Action("EditZone", "Shipping", new { StoreID = Model.StoreID, ZoneID = method.ZoneID })"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                                                            <a href="@Url.Action("DeleteZone", "Shipping", new { StoreID = Model.StoreID, ZoneID = method.ZoneID })" onclick="return confirm('Are you sure?')">
                                                                <i class="fa fa-trash-o fa-lg"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                                @if (Model.ShipZones.Count < 1)
                                                {
                                                    <tr><td colspan="4">No Ship Zones added.</td></tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->