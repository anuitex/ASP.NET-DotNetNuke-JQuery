                                                        <i class="rc-icon glyphicon glyphicon-checkbox" aria-hidden="true"></i>
                                                    </span>
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    @Html.CheckBox("Carrier", (((string)Model.StoreConfig["Carrier"]) ?? "").Contains("ParcelPerfect"), new { @value = "ParcelPerfect", @onchange = "checkBoxChange(this);" }) Parcel Perfect
