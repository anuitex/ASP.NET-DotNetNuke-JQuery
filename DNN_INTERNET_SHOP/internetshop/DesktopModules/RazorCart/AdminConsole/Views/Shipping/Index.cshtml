                                        <label class="col-md-3 col-sm-4 control-label">Weight Unit of Measure</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.DropDownList("WeightUOE", Model.WeightUOEs, "-- Select --", new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group" data-show="conditional" data-cond-option="Carrier" data-cond-value="USPS,UPS,FedEx,ParcelPerfect" data-cond-operator="[]" style="display: none;">
                                        <label class="col-md-3 col-sm-4 control-label">Override Carrier Method Prices <i class="fa fa-info-circle" data-toggle="tooltip" title="@Model.Tooltips["OverrideCarrierMethods"]"></i></label>
