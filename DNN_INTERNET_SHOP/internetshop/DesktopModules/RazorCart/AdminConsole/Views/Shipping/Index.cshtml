                                        <div class="col-md-6 col-sm-8">
                                            <div class="radio">
                                                <label>
                                                    @Html.RadioButton("AddressClass", "Auto", (string)Model.StoreConfig["AddressClass"] == "Auto" || Model.StoreConfig["AddressClass"] == null, new { }) Auto
