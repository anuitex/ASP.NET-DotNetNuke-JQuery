@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.CouponModel>
@using System.Web.Mvc.Html;
@using System.Globalization;

<!-- Bootstrap DateTimePicker CSS -->
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/bootstrap-datetimepicker.min.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<!-- Select2 CSS -->
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/select2.min.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/select2-bootstrap.min.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<!-- Moment JavaScript -->
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/moment.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>
<!-- Bootstrap DateTimePicker JavaScript -->
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/bootstrap-datetimepicker.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>
<!-- Select2 JavaScript -->
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/select2.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Coupon Setup</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_CouponMenu")
        <div class="tab-content">
            <div class="tab-pane active">
                <div class="container-fluid">
                    <div class="row">
                        @if (Model.Submitted)
                        {
                            <div class="alert alert-success alert-dismissable">
                                <span class="close" data-dismiss="alert" aria-label="close">×</span>
                                @Model.SaveMessage
                            </div>
                        }
                        <form class="form-horizontal" method="post" action="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "Coupon", new { StoreID = Model.StoreID, CouponID = Model.Coupon.CouponID })" autocomplete="off">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Active</label>
                                        <div class="col-md-6 col-sm-8">
                                            <div class="checkbox">
                                                <label>
                                                    @Html.CheckBox("Active", Model.Coupon.Active, new { @class = "styled", @onchange = "checkBoxChange(this);" })
                                                    <span class="rc-control">
                                                        <i class="rc-icon glyphicon glyphicon-checkbox" aria-hidden="true"></i>
                                                    </span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Coupon Code</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("CouponCode", Model.Coupon.CouponCode, new { @class = "form-control", @placeholder = "Coupon Code", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Coupon Name</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("CouponName", Model.Coupon.CouponName, new { @class = "form-control", @placeholder = "Coupon Name" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Start Date</label>
                                        <div class="col-md-6 col-sm-8">
                                            <div class="input-group date" data-provide="datetimepicker" data-max-date="#ExpireDate">
                                                @Html.TextBox("StartDate", Model.Coupon.StartDate > new DateTime(1900, 1, 1) ? Model.Coupon.StartDate.ToString(Model.ShortDateFormat) : string.Empty,
                                                        new { @class = "form-control", @placeholder = "Start Date" })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Expire Date</label>
                                        <div class="col-md-6 col-sm-8">
                                            <div class="input-group date" data-provide="datetimepicker" data-min-date="#StartDate">
                                                @Html.TextBox("ExpireDate", Model.Coupon.ExpireDate > new DateTime(1900, 1, 1) ? Model.Coupon.ExpireDate.ToString(Model.ShortDateFormat) : string.Empty,
                                                        new { @class = "form-control", @placeholder = "Expire Date" })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-calendar"></span>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Coupon Amount</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("CouponAmount", Model.Coupon.CouponAmount.ToString("0.##", CultureInfo.InvariantCulture), new { @class = "form-control", @placeholder = "Coupon Amount", @type = "number", @step = "0.01", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Discount Percent</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("DiscountPercent", Model.Coupon.DiscountPercent.ToString("0.##", CultureInfo.InvariantCulture), new { @class = "form-control", @placeholder = "Discount Percent", @type = "number", @step = "0.01", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Shipping Amount</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("CouponShipping", Model.Coupon.CouponShipping.ToString("0.##", CultureInfo.InvariantCulture), new { @class = "form-control", @placeholder = "Shipping Amount", @type = "number", @step = "0.01", @min = "-1", @required = "required" })
                                            *Default = -1 (Coupon will not affect the shipping amount)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Minimum Order Amount</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("MinOrderAmount", Model.Coupon.MinOrderAmount.ToString("0.##", CultureInfo.InvariantCulture), new { @class = "form-control", @placeholder = "Minimum Order Amount", @type = "number", @step = "0.01", @min = "-1", @required = "required" })
                                            *Default = -1 (Coupon will be applied regardless of the order amount)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Maximum Usage Limit</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("MaxUseProduct", Model.Coupon.MaxUseProduct, new { @class = "form-control", @placeholder = "Maximum Usage Limit", @type = "number", @step = "1", @min = "-1", @required = "required" })
                                            *Default = -1 (Coupon will not become invalid regardless of how many times it has been used)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Product Level Coupon</label>
                                        <div class="col-md-6 col-sm-8">
                                            @Html.ListBox("CouponProductIDs", Model.CouponProductList)
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <label class="col-md-3 col-sm-4 control-label">Variant Level Coupon</label>
                                        <div class="col-md-6 col-sm-8">
                                            @if (Model.Coupon.CouponID > 0)
                                            {
                                                <div class="panel panel-default">
                                                    <div class="panel-body">
                                                        <div class="table-responsive">
                                                            <table class="table table-hover">
                                                                <thead>
                                                                    <tr>
                                                                        <td>Product</td>
                                                                        <td>Variant</td>
                                                                        <td>Lifecycle Status</td>
                                                                        <td></td>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var variant in Model.CouponVariants)
                                                                    {
                                                                        <tr>
                                                                            <td>@variant.ModelName</td>
                                                                            <td>@variant.VariantName</td>
                                                                            <td>@variant.LifecycleStatus</td>
                                                                            <td>
                                                                                <a href="@Url.Action("DeleteCodeVariant", "Coupon", new { StoreID = Model.StoreID, CouponID = Model.Coupon.CouponID, ID = variant.ID })" onclick="return confirm('Are you sure?')">
                                                                                    <i class="fa fa-trash-o fa-lg"></i>
                                                                                </a>
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DropDownList("CouponVariantProductID", Model.CouponVariantProductList)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DropDownList("CouponProductVariantID", Model.CouponProducttVariantList, new { @disabled = true })
                                                                        </td>
                                                                        <td>
                                                                            @Html.DropDownList("LifecycleStatus", Model.LifecycleStatuses, new { @class = "form-control", @required = "required" })
                                                                        </td>
                                                                        <td></td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td colspan="4">
                                                                            <button type="submit" class="btn btn-default" name="AddCodeVariant" formnovalidate>Add Variant Level</button>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-warning">
                                                    Please save coupon in order to add variant levels.
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save</button>
                                    <a class="btn btn-default" href="@Url.Action("Code", "Coupon", new { StoreID = Model.StoreID })">Back</a>
                                </div>
                            </div>
                        </form>
                        <!-- /.form -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<script type="text/javascript">
    $(document).ready(function () {
        // Init Date Picker
        $('[data-provide="datetimepicker"]').each(function () {
            $(this).datetimepicker({
                format: '@Model.ShortDateFormat.ToUpper()',
                useCurrent: false
            }).on('dp.change', function (e) {
                if ($(this).data('min-date'))
                    $($(this).data('min-date')).closest('[data-provide="datetimepicker"]').data('DateTimePicker').maxDate(e.date);
                if ($(this).data('max-date'))
                    $($(this).data('max-date')).closest('[data-provide="datetimepicker"]').data('DateTimePicker').minDate(e.date);
            }).find('input[type="text"]').click(function () {
                $(this).closest('[data-provide="datetimepicker"]').data("DateTimePicker").toggle();
            });
        });
        // Init Select-2
        $('#CouponProductIDs').select2({
            width: '100%',
            theme: 'bootstrap',
            placeholder: "Select products",
            ajax: {
                type: 'POST',
                url: '@Url.Action("List", "Product", new { StoreID = Model.StoreID })',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        'search[value]': params.term,
                        'length': 25,
                        'start': 0
                    };
                },
                processResults: function (data, params) {
                    var selected = this.$element.val().map(Number);
                    return {
                        results: $.map(data.data, function (item) {
                            if ($.inArray(item.ProductID, selected) === -1) {
                                return {
                                    id: item.ProductID,
                                    text: item.ModelName
                                };
                            }
                        })
                    };
                },
                cache: true
            },
            minimumInputLength: 2,
        });
        $('#CouponVariantProductID').select2({
            width: '100%',
            theme: 'bootstrap',
            placeholder: "Select a product",
            ajax: {
                type: 'POST',
                url: '@Url.Action("List", "Product", new { StoreID = Model.StoreID })',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        'search[value]': params.term,
                        'length': 25,
                        'start': 0
                    };
                },
                processResults: function (data, params) {
                    return {
                        results: $.map(data.data, function (item) {
                            return {
                                id: item.ProductID,
                                text: item.ModelName
                            };
                        })
                    };
                },
                cache: true
            },
            minimumInputLength: 2,
        }).on('select2:select', function (e) {
            var productID = $(e.target).select2('data')[0].id;
            if (productID)
                $('#CouponProductVariantID').prop("disabled", false);
            else
                $('#CouponProductVariantID').prop("disabled", true);
            $('#CouponProductVariantID').val(null).trigger('change');
        });
        $('#CouponProductVariantID').select2({
            width: '100%',
            theme: 'bootstrap',
            placeholder: "Select a product variant",
            ajax: {
                type: 'POST',
                url: '@Url.Action("ListVariants", "Product", new { StoreID = Model.StoreID })',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        'ProductID': $('#CouponVariantProductID').select2('data')[0].id,
                        'search[value]': params.term,
                        'length': 25,
                        'start': 0
                    };
                },
                processResults: function (data, params) {
                    return {
                        results: $.map(data.data, function (item) {
                            return {
                                id: item.VariantID,
                                text: item.VariantGroup + ' > ' + item.VariantName
                            };
                        })
                    };
                },
                cache: true
            },
            minimumInputLength: 0,
        });
    });
</script>