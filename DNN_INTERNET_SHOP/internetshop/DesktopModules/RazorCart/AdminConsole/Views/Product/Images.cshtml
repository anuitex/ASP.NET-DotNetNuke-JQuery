@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ProductModel>
@using System.Web.Mvc.Html;
@using Newtonsoft.Json;
@using DotNetNuke.Common.Utilities;
@{
    long maxUploadSize = Config.GetRequestFilterSize();
    string strExts = "png|jpg|jpe|jpeg|tif|tiff";
    //string[] arrExts = new[] { ".png", ".jpg", ".jpe", ".jpeg", ".tif", ".tiff" };
    //strExts = string.Join("|", DotNetNuke.Entities.Host.Host.AllowedExtensionWhitelist.AllowedExtensions.Where(ext => arrExts.Contains(ext, StringComparer.OrdinalIgnoreCase)).Select(ext => ext.Replace(".", "")));
}

<!-- Image Upload CSS -->
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/dropzone.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/cropper.min.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/rzc-product-images.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<!-- Image Upload JavaScript -->
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/jquery.ui.touch-punch.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/dropzone.js?v=" + Model.ProductVersion)" type="text/javascript"></script>
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/cropper.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/tiff.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/rzc-product-images.js?v=" + Model.ProductVersion)" type="text/javascript"></script>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Product: @Model.Product.ModelName</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @Html.Partial("_ProductMenu")
        <div class="tab-content">
            <div class="tab-pane active">
                <div class="container-fluid">
                    <div class="row">
                        <div class="alert alert-info">
                            <i class="fa fa-info-circle"></i>
                            <strong>The first image will be your featured product image. Additional images are alternate views of your product.</strong>
                            <p>&emsp;Drag and drop images to reorder. Accepted file types are png, jpeg and tiff, image size limit is @maxUploadSize MB (Configurable).</p>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-body" style="padding: 6px;">
                                <div class="custom-dropzone">
                                    <div class="dropzone dropzone-left">
                                    </div>
                                    <div class="dropzone dropzone-right">
                                        <div class="dz-sortable dropzone-previews"></div>
                                    </div>
                                    <div class="dz-template" style="display: none;">
                                        <div class="dz-template-item dz-preview dz-file-preview">
                                            <input id="hdnThumbImageFileName_" type="hidden" />
                                            <input id="hdnLargeImageFileName_" type="hidden" />
                                            <input id="hdnZoomImageFileName_" type="hidden" />
                                            <div class="dz-image">
                                                <img data-dz-thumbnail />
                                            </div>
                                            <div class="dz-input">
                                                <input id="txtImageTitle_" class="form-control" placeholder="Image Title" />
                                            </div>
                                            <div class="dz-input">
                                                <input id="txtImageAlt_" class="form-control" placeholder="Image Alt" />
                                            </div>
                                            <div class="dz-progress">
                                                <span class="dz-upload" data-dz-uploadprogress></span>
                                            </div>
                                            <div class="dz-error-message">
                                                <span data-dz-errormessage></span>
                                            </div>
                                            <div class="dz-success-mark">
                                                <svg width="54px" height="54px" viewBox="0 0 54 54" version="1.1"
                                                     xmlns="http://www.w3.org/2000/svg"
                                                     xmlns:xlink="http://www.w3.org/1999/xlink"
                                                     xmlns:sketch="http://www.bohemiancoding.com/sketch/ns">
                                                    <title>Check</title>
