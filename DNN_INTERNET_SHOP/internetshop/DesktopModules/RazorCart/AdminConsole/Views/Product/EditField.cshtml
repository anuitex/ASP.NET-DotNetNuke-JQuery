@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ProductModel>
@using System.Web.Mvc.Html;

<!-- Conditionize JS -->
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/conditionize.jquery.js?v=" + Model.ProductVersion)" type="text/javascript"></script>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Product Field Templates</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (Model.Submitted)
        {
            <div class="alert alert-success alert-dismissable">
                <span class="close" data-dismiss="alert" aria-label="close">×</span>
                @Model.SaveMessage
            </div>
        }
        <form class="form-horizontal" method="post" action="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "Product", new { StoreID = Model.StoreID, PTID = Model.TemplateField.PTID })" autocomplete="off">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Category</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.DropDownList("CategoryID", Model.ProductCategories, "-- No Category --", new { @class = "form-control" })
                            Select "No Category" if you intend to use this field with any/all categories
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Label</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.TextBox("Label", Model.TemplateField.Label, new { @class = "form-control", @placeholder = "Label", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Type</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.DropDownList("Type", Model.CustomFieldTypes, "-- Select --", new { @class = "form-control", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group" data-show="conditional" data-cond-option="Type" data-cond-value="Checkbox," data-cond-operator="![]" style="display: none;">
                        <label class="col-md-3 col-sm-4 control-label" data-show="conditional" data-cond-option="Type" data-cond-value="TextBox" style="display: none;">Value</label>
                        <label class="col-md-3 col-sm-4 control-label" data-show="conditional" data-cond-option="Type" data-cond-value="DatePicker" style="display: none;">Date</label>
                        <label class="col-md-3 col-sm-4 control-label" data-show="conditional" data-cond-option="Type" data-cond-value="Email" style="display: none;">Email</label>
                        <label class="col-md-3 col-sm-4 control-label" data-show="conditional" data-cond-option="Type" data-cond-value="Url" style="display: none;">Url</label>
                        <label class="col-md-3 col-sm-4 control-label" data-show="conditional" data-cond-option="Type" data-cond-value="DropDownList" style="display: none;">Value(s)</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.TextBox("Value", Model.TemplateField.Value, new { @class = "form-control", @placeholder = "Value(s)", @required = "required" })
                            <span data-show="conditional" data-cond-option="Type" data-cond-value="DropDownList" style="display: none;">* Use comma-separated values (e.g.: Small, Medium, Large)</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Share</label>
                        <div class="col-md-6 col-sm-8">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBox("Share", Model.TemplateField.Share, new { @onchange = "checkBoxChange(this);" })
                                    <span class="rc-control">
                                        <i class="rc-icon glyphicon glyphicon-checkbox" aria-hidden="true"></i>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save</button>
                    <a class="btn btn-default" href="@Url.Action("Field", "Product", new { StoreID = Model.StoreID })">Back</a>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->
<script type="text/javascript">
    $(document).ready(function () {
        // Init Conditionize Form
        $('[data-show="conditional"]').conditionize();
    });
</script>