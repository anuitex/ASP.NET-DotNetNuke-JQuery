@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ProductModel>
@using System.Web.Mvc.Html;

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Product: @Model.Product.ModelName</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal" method="post" action="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "Product", new { StoreID = Model.StoreID, ProductID = Model.Product.ProductID })" autocomplete="off">
            @Html.Partial("_ProductMenu")
            <div class="tab-content">
                <div class="tab-pane active">
                    <div class="container-fluid">
                        <div class="row">
                            @if (Model.Submitted)
                            {
                                <div class="alert alert-success alert-dismissable">
                                    <span class="close" data-dismiss="alert" aria-label="close">×</span>
                                    @Model.SaveMessage
                                </div>
                            }
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Product SEO</h4>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        @Html.Label("SEOURL", "SEO Url", new { @class = "col-md-3 col-sm-4 control-label" })
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextBox("SEOURL", Model.Product.SEOURL, new { @class = "form-control", @placeholder = "SEO Url" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("TitleTag", "Title Tag", new { @class = "col-md-3 col-sm-4 control-label" })
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextArea("TitleTag", Model.Product.TitleTag, new { @class = "form-control", @placeholder = "Title Tag" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("DescriptionTag", "Description Tag", new { @class = "col-md-3 col-sm-4 control-label" })
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextArea("DescriptionTag", Model.Product.DescriptionTag, new { @class = "form-control", @placeholder = "Description Tag" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("KeywordTag", "Keyword Tag", new { @class = "col-md-3 col-sm-4 control-label" })
                                        <div class="col-md-6 col-sm-8">
                                            @Html.TextArea("KeywordTag", Model.Product.KeywordTag, new { @class = "form-control", @placeholder = "Keyword Tag" })
                                        </div>
                                    </div>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save</button>
                                    <a class="btn btn-default" href="@Url.Action("Index", "Product", new { StoreID = Model.StoreID })">Back</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->