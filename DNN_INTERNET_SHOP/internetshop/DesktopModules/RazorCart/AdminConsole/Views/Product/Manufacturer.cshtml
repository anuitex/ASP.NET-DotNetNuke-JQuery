@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ProductModel>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Product Manufacturers</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal" method="post" action="@Url.Action("Manufacturer", "Product", new { StoreID = Model.StoreID })" autocomplete="off">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a class="btn btn-primary pull-right" href="@Url.Action("AddManufacturer", "Product", new { StoreID = Model.StoreID })">
                        <i class="fa fa-plus"></i> Add Manufacturer
                    </a>
                    <h4>Manufacturers</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Manufacturer Name</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Country</th>
                                    <th>Region</th>
                                    <th>Share</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var manufacturer in Model.Manufacturers)
                                {
                                    <tr>
                                        <td>@manufacturer.ManufacturerName</td>
                                        <td>@manufacturer.FirstName</td>
                                        <td>@manufacturer.LastName</td>
                                        <td>@manufacturer.Country</td>
                                        <td>@manufacturer.State</td>
                                        <td>@manufacturer.Share</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("EditManufacturer", "Product", new { StoreID = Model.StoreID, ManufacturerID = manufacturer.ManufacturerID })"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                                            <a href="@Url.Action("DeleteManufacturer", "Product", new { StoreID = Model.StoreID, ManufacturerID = manufacturer.ManufacturerID })" onclick="return confirm('Are you sure?')">
                                                <i class="fa fa-trash-o fa-lg"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Manufacturers.Count < 1)
                                {
                                    <tr><td colspan="7">No Manufacturers added.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->