@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.PermissionModel>
@using System.Web.Mvc.Html;

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Store Permission Setup</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <form class="form-horizontal" method="post" action="@Url.Action("Index", "Permission", new { StoreID = Model.StoreID })" autocomplete="off">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a class="btn btn-primary pull-right" href="@Url.Action("Add", "Permission", new { StoreID = Model.StoreID })">
                        <i class="fa fa-plus"></i> Add Store Permissions
                    </a>
                    <h4>Store Permissions</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Role</th>
                                    <th>Section</th>
                                    <th>Access</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var permission in Model.Permissions)
                                {
                                    <tr>
                                        <td>@permission.RoleName</td>
                                        <td>@permission.Section.ToString()</td>
                                        <td>@permission.Access.ToString()</td>
                                        <td>@permission.DateCreated.ToShortDateString()</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("Edit", "Permission", new { StoreID = Model.StoreID, ID = permission.ID })"><i class="fa fa-pencil-square-o fa-lg"></i></a>
                                            <a href="@Url.Action("Delete", "Permission", new { StoreID = Model.StoreID, ID = permission.ID })" onclick="return confirm('Are you sure?')"><i class="fa fa-trash-o fa-lg"></i></a>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Permissions.Count < 1)
                                {
                                    <tr><td colspan="5">No Store Permissions added.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->