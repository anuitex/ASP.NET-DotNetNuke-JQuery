@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.PermissionModel>
@using System.Web.Mvc.Html;
@using RazorCart.Service.Data.ModelDataContext;

<!-- Select2 CSS -->
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/select2.min.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<link href="@Href("~/DesktopModules/RazorCart/AdminConsole/Styles/select2-bootstrap.min.css?v=" + Model.ProductVersion)" rel="stylesheet" type="text/css" />
<!-- Select2 JavaScript -->
<script src="@Href("~/DesktopModules/RazorCart/AdminConsole/Scripts/select2.min.js?v=" + Model.ProductVersion)" type="text/javascript"></script>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Store Permission Setup</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (Model.Submitted)
        {
            <div class="alert alert-success alert-dismissable">
                <span class="close" data-dismiss="alert" aria-label="close">×</span>
                @Model.SaveMessage
            </div>
        }
        <form class="form-horizontal" method="post" action="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "Permission", new { StoreID = Model.StoreID })" autocomplete="off">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-5">
                            <label class="control-label">Roles</label>
                            @Html.ListBox("Role", Model.PortalRoles, new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-md-2">
                            <label class="control-label">Access</label>
                            @foreach (StoreAccess access in Model.AccessList)
                            {
                                <div class="radio">
                                    <label>
                                        @Html.RadioButton("Access", (int)access, false, new { @required = "required" }) @(access)
                                        <span class="rc-control">
                                            <i class="rc-icon glyphicon glyphicon-radio" aria-hidden="true"></i>
                                        </span>
                                    </label>
                                </div>
                            }
                        </div>
                        <div class="col-md-5">
                            <label class="control-label">Sections</label>
                            @foreach (StoreSection section in Model.SectionList)
                            {
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="Section" name="Section" value="@((int)section)" data-chk-group="sections" required /> @(section)
                                        <span class="rc-control">
                                            <i class="rc-icon glyphicon glyphicon-checkbox" aria-hidden="true"></i>
                                        </span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save</button>
                    <a class="btn btn-default" href="@Url.Action("Index", "Permission", new { StoreID = Model.StoreID })">Back</a>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->
<script type="text/javascript">
    $(document).ready(function () {
        // Select-2
        $('[id="Role"]').select2({
            width: '100%',
            theme: 'bootstrap',
            placeholder: "Select security roles",
            minimumInputLength: 0,
        });
        (function () {
            var chkGrpChange = function (chkGrp) {
                var $chkGrpOpts = $('[data-chk-group=' + chkGrp + ']');
                var chkCount = $chkGrpOpts.filter(function () { return this.checked; }).length;
                switch (chkCount) {
                    case 0:
                        $chkGrpOpts.each(function () {
                            this.setAttribute('required', '');
                            this.setCustomValidity('Please select options.');
                        });
                        break;
                    case 1:
                        $chkGrpOpts.each(function () {
                            this.removeAttribute('required');
                            this.setCustomValidity('');
                        });
                        break;
                }
            };
            // Checkbox/Radio Groups
            var groups = {};
            $('[data-chk-group]').each(function () {
                var chkGrp = this.dataset.chkGroup;
                if (chkGrp && this.attributes.required) {
                    this.setCustomValidity('Please select options.');
                    this.onchange = function () {
                        chkGrpChange(chkGrp);
                    };
                    if (groups.hasOwnProperty(chkGrp)) {
                        groups[chkGrp] += 1;
                    } else {
                        groups[chkGrp] = 1;
                    }
                }
            });
            for (var key in groups) {
                chkGrpChange(key);
            }
        })();
    });
</script>