@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.OrderModel>

<div class="tab-content">
    <div class="tab-pane active" id="orderBtn1">
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#orderModal1" data-backdrop="static" data-keyboard="true">
            <i class="fa fa-plus"></i> Add Item
        </button>
    </div>
    <div class="tab-pane" id="orderBtn2">
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#orderModal2" data-backdrop="static" data-keyboard="true">
            <i class="fa fa-plus"></i> Add Payment
        </button>
    </div>
    <div class="tab-pane" id="orderBtn3">
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#orderModal3" data-backdrop="static" data-keyboard="true">
            <i class="fa fa-plus"></i> Add Note
        </button>
    </div>
    <div class="tab-pane" id="orderBtn4">
        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#orderModal4" data-backdrop="static" data-keyboard="true">
            <i class="fa fa-plus"></i> Add Shipment
        </button>
    </div>
</div>
<ul class="nav nav-tabs">
    <li class="active">
        <a data-toggle="tab" data-target="#orderTab1, #orderBtn1" href="#orderTab1">Items (@Model.Order.OrderDetails.Count)</a>
    </li>
    <li>
        <a data-toggle="tab" data-target="#orderTab2, #orderBtn2" href="#orderTab2">Payments (@Model.Payments.Count)</a>
    </li>
    <li>
        <a data-toggle="tab" data-target="#orderTab3, #orderBtn3" href="#orderTab3">Notes (@Model.OrderNotes.Count)</a>
    </li>
    <li>
        <a data-toggle="tab" data-target="#orderTab4, #orderBtn4" href="#orderTab4">Shipments (@Model.Fulfillments.Count)</a>
    </li>
</ul>