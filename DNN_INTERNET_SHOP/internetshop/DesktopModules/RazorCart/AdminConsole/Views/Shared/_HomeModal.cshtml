@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.HomeModel>
@using System.Web.Mvc;

<div class="modal fade" id="homeModal1" role="dialog" tabindex="-1" aria-labelledby="homeModalLabel1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form method="post" action="@Url.Action("Setting", "Home", new { StoreID = Model.StoreID })" autocomplete="off">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="homeModalLabel1">Dashboard Settings</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Show Order Statuses</label>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <td>Status</td>
                                                <td>Color</td>
                                                <td>Icon</td>
                                                <td>Query</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var status in Model.StatusDisplayList)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="checkbox">
                                                            <label>
                                                                <input type="checkbox" id="ShowOrderStatus" name="ShowOrderStatus" value="@status.Value" @(status.Selected ? "checked" : "") /> @status.Text
                                                                <span class="rc-control">
                                                                    <i class="rc-icon glyphicon glyphicon-checkbox" aria-hidden="true"></i>
                                                                </span>
                                                            </label>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div data-show="conditional" data-cond-option="ShowOrderStatus" data-cond-value="@status.Value">
                                                            <input type="color" name="ColorOrderStatus" value="@status.ColorCode" class="form-control" style="padding: 4px 4px;" required />
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div data-show="conditional" data-cond-option="ShowOrderStatus" data-cond-value="@status.Value">
                                                            <input type="text" name="IconOrderStatus" value="@status.IconClass" class="form-control" style="" required />
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div data-show="conditional" data-cond-option="ShowOrderStatus" data-cond-value="@status.Value">
                                                            <input type="text" name="QueryOrderStatus" value="@status.LookupQuery" class="form-control" required />
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default pull-left" name="Reset"><i class="fa fa-undo"></i> Reset</button>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save</button>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.modal -->