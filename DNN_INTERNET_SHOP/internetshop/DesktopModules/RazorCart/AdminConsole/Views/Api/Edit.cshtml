@inherits System.Web.Mvc.WebViewPage<RazorCart.AdminConsole.Models.ApiModel>
@using System.Web.Mvc.Html;

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">RESTful API Setup</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (Model.Submitted)
        {
            <div class="alert alert-success alert-dismissable">
                <span class="close" data-dismiss="alert" aria-label="close">×</span>
                @Model.SaveMessage
            </div>
        }
        <form class="form-horizontal" method="post" action="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "Api", new { StoreID = Model.StoreID, ID = Model.ClientCredential.ID })" autocomplete="off">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Title</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.TextBox("Title", Model.ClientCredential.Title, new { @class = "form-control", @placeholder = "Title", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Summary</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.TextArea("Summary", Model.ClientCredential.Summary, new { @class = "form-control", @placeholder = "Summary", @rows = "5" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Application Url</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.TextBox("ApplicationUrl", Model.ClientCredential.ApplicationUrl, new { @class = "form-control", @placeholder = "Application Url", @required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-sm-4 control-label">Callback Url</label>
                        <div class="col-md-6 col-sm-8">
                            @Html.TextBox("CallbackUrl", Model.ClientCredential.CallbackUrl, new { @class = "form-control", @placeholder = "Callback Url", @required = "required" })
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Save</button>
                    <a class="btn btn-default" href="@Url.Action("Index", "Api", new { StoreID = Model.StoreID })">Back</a>
                </div>
            </div>
        </form>
        <!-- /.form -->
    </div>
</div>
<!-- /.row -->