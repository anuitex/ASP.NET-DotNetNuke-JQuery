@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<RazorCart.MyAccount.Models.AccountModel>
@using DotNetNuke.Web.Mvc.Helpers;

<div class="rzc-basket">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
            <thead>
                <tr>
                    <th>@Dnn.LocalizeString("OrderNo")</th>
                    <th>@Dnn.LocalizeString("SKU")</th>
                    <th>@Dnn.LocalizeString("ProductName")</th>
                    <th></th>
                </tr>
            </thead>
            <tbody ng-repeat="item in account.downloadableItems">
                <tr>
                    <td>{{item.OrderID}}</td>
                    <td>{{item.ProductSKU}}</td>
                    <td>{{item.ProductName}}</td>
                    <td class="text-right">
                        <button type="button" class="btn btn-default btn-sm active" ng-click="account.download($index)">
                            <i class="fa fa-download" role="button"></i> @Dnn.LocalizeString("Download")
                        </button>
                    </td>
                </tr>
            </tbody>
            <tbody ng-if="account.downloadableItems.length < 1">
                <tr>
                    <td colspan="4"><span>@Dnn.LocalizeString("NoDownloads")</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>