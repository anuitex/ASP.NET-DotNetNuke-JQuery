@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<RazorCart.ProductSlider.Models.SettingsModel>
@using DotNetNuke.Web.Mvc.Helpers

<h2>RazorCart ProductSlider Settings</h2>
<fieldset>
    <div class="dnnFormItem">
        <div class="dnnLabel">
            @Html.LabelFor(m => Model.PageSize, new { @class = "control-label" })
        </div>
        @Html.TextBoxFor(m => Model.PageSize, new { @class = "" })
    </div>
    <div class="dnnFormItem">
        <div class="dnnLabel">
            @Html.LabelFor(m => Model.AllowContactCreation, new { @class = "control-label" })
        </div>
        @Html.CheckBoxFor(m => Model.AllowContactCreation, new { @class = "" })
    </div>
</fieldset>